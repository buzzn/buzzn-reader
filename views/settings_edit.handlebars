<form name="edit settings", method="post", action="/settings/save">

  <div class="form-group row">
    <label for="inputHost" class="col-sm-2 form-control-label">Host</label>
    <div class="col-sm-10">
      <input name="host" type="text" value={{host}} class="form-control">
    </div>
  </div>

  <div class="form-group row">
    <label for="inputToken" class="col-sm-2 form-control-label">Token</label>
    <div class="col-sm-10">
      <input name="token" type="text" value={{token}} class="form-control">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-secondary">Save</button>
    </div>
  </div>

</form>
